package ec.edu.espol.workshops;

public class Calculator {
 
    public static double calCarIns(Customer customer) {
        
    	double cost = 500.0;
    	
        int age = customer.getAge();
        boolean isFemale = customer.isFemale();
        boolean isMale = customer.isMale();
        boolean isMarried = customer.isMarried();
        boolean hasLicense = customer.hasLicense();
        
        if (age > 80 && !licensed) {
            cost = 0;
            return cost;
        }
        if (isMale && !married && age < 25) {
            result.cost += 1500;
            return result;
        }
        if (isFemale || married) {
            result.cost -= 200;
        }
        if (age >= 45 && age < 65) {
            result.cost -= 100;
        }
        return result;
    }
    
    public int getCost() {
        return cost;
    }

}